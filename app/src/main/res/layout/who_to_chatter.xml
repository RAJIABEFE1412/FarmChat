<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/lecturerImage"
            app:civ_circle_background_color="@color/colorPrimary"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lecturerName"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@id/lecturerImage"
            tools:text="Dr. A.O Sarumi"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lecturerImage" />
        <TextView
            android:id="@+id/add_lec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/lecturerImage"
            android:layout_marginRight="4dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@id/lecturerName"
            android:layout_marginLeft="4dp"
            android:tint="#000"
            android:text="Farmer"
            android:layout_toRightOf="@id/lecturerImage" />


        <ImageView
            android:src="@drawable/ic_away_1_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/presence"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>